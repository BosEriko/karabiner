{
    "description": "Map ctrl+j/k to next/previous tab in Zen",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^app\\.zen-browser\\.zen$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "j",
                "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "down_arrow",
                    "modifiers": ["command", "option"]
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^app\\.zen-browser\\.zen$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "k",
                "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "up_arrow",
                    "modifiers": ["command", "option"]
                }
            ],
            "type": "basic"
        }
    ]
}
